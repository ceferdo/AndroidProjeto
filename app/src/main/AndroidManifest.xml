<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aula.projetoandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoAndroid">
        <activity
            android:name=".CervejaActivity"
            android:label="@string/title_activity_cerveja"
            android:theme="@style/Theme.ProjetoAndroid.NoActionBar"></activity>
        <activity
            android:name=".ResultCombustActivity"
            android:label="@string/title_activity_result_combust"
            android:theme="@style/Theme.ProjetoAndroid.NoActionBar" />
        <activity
            android:name=".CombustivelActivity"
            android:label="@string/title_activity_combustivel"
            android:theme="@style/Theme.ProjetoAndroid.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjetoAndroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>